			<Flammability>0.5</Flammability>
		</statBases>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<comps>
			<!-- Note that this is ONLY hooked up for interactions with CompLaunchable, 
				and will otherwise be non-functional. -->
			<li Class="GasNetwork.CompProperties_GasTrader_Buffer">
				<compClass>GasNetwork.CompGasTrader_Buffer</compClass>

				<!-- maximum buffer storage size -->
				<maxBuffer>125</maxBuffer>

				<!-- inherits from CompGasTrader, so all those props apply here too.
					In the context of a buffer, gasConsumption becomes the refill rate.
					Consumption is automatically lowered/stopped when the buffer is full. -->
				<gasConsumption>100</gasConsumption>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_FuelingPort</li>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<researchPrerequisites>
			<li>TransportPod</li>
			<li>VFE_GasExtraction</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>7</constructionSkillPrerequisite>
		<uiIconScale>0.9</uiIconScale>
	</ThingDef>


