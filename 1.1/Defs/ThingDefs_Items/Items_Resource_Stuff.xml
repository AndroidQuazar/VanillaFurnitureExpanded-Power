<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	
	<ThingDef ParentName="ResourceBase">
    <defName>VFE_HelixienCanister</defName>
    <label>helixien gas canister</label>
	
    <description>A versatile fuel. Can be used in gas powered machines that are not affected by solar flares. It is less flammable than chemfuel.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Item/VFE_HelixienCanister</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <stackLimit>150</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>1.80</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>0.5</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>1.1</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <explosiveExpandPerStackcount>0.037</explosiveExpandPerStackcount>
        <startWickOnDamageTaken>
          <li>Flame</li>
        </startWickOnDamageTaken>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
       
        <preExplosionSpawnChance>1</preExplosionSpawnChance>
        <wickTicks>70~150</wickTicks>
      </li>
	  <li Class="VanillaPowerExpanded.CompProperties_VariableStack">
       
      </li>
    </comps>
  </ThingDef>

</Defs>
